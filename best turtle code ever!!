import turtle
t = turtle.Pen()
t.speed(100)

def circle():
    for x in range (200):
        t.pencolor((r, g, b))
        t.circle
        t.left(91)

def triangle():
    for x in range (200):
        t.pencolor("red")
        t.forward(x)
        t.right(91)

def square():
    for x in range (200):
        t.pencolor("blue")
        t.forward(x)
        t.right(90)

def pentagon():
    for x in range(200):
        t.pencolor("black")
        t.forward(x)
        t.right(98)

def hexagon():
    for x in range(200):
        t.pencolor("orange")
        t.forward(x)
        t.right(88)

