while True:
#define the shapes you can choose from
    shape = ["1 circle", "2 triangle", "3 square", "4 pentagon", "5 hexagon"]
    #drawing = print("what would you like to draw? Pick a shape 1-5.." + (shape))
    print("what would you like to draw? ")
    drawing = input(shape)
    print("what color do you want?")

    r = str(input("How much red do you want? Choose a number 1-255."))
    g = str(input("How much green do you want? Choose a number 1-255."))
    b = str(input("How much bliue do you want? Choose a number 1-255."))
    
    
    if drawing == "1":
        circle()
    if drawing == "2":
        triangle()
    if drawing == "3":
        square()
    if drawing == "4":
        pentagon()
    if drawing == "5":
        hexagon()

